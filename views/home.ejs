<%- include ("partials/header") %>

    <div class="container-lg main-section">

        <h3>All Notes</h3>

        <a href="/compose" class="add-icon btn btn-dark btn-sm"><i class="fas fa-plus"></i></a>

        <p>
            <%=comment%>
        </p>

        <% for (const note in all_notes) {%>
            <div class="card note shadow-sm p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=all_notes[note][0]%>
                    </h5>
                    <p class="card-text text-truncate">
                        <%=all_notes[note][1]%>
                    </p>
                    <form action="" method="post">
                        <button type="submit" formaction="/open" name="open_button" value=<%=note %> class="btn
                            btn-primary btn-sm">Open</button>
                        <button type="submit" formaction="/delete" name="delete_button" value=<%=note %> class="btn
                            btn-danger btn-sm">Delete</button>
                        <button type="submit" formaction="/edit" name="edit_button" value=<%=note %> class="btn
                            btn-warning btn-sm">Edit</button>
                    </form>
                </div>
            </div>
            <% }%>
    </div>
    </div>

    <%- include ("partials/footer") %>